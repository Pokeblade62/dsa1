<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>RegistrationForm</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">


		<link rel="stylesheet" href="css/stylesignup.css">
	</head>

	<body>

		<div class="wrapper" style="background-image: url('images/bg-registration-form-2.jpg');">
			<div class="inner">
				<form action="/signup" method="post">
					<h3>Sign Up!</h3>
					<div class="form-group">
						<div class="form-wrapper">
							<label for="">First Name</label>
							<input type="text" name="first" id="name0" class="form-control">
						</div>
						<div class="form-wrapper">
							<label for="">Last Name</label>
							<input type="text" name="last" class="form-control">
						</div>
					</div>
					<div class="form-wrapper">
						<label for="">Email</label>
						<input type="text" name="email" id="email0" class="form-control">
					</div>
					<div class="form-wrapper">
						<label for="">Password</label>
						<input type="password" name="pass1" id="txtPassword" class="form-control">
					</div>
					<div class="form-wrapper">
						<label for="">Confirm Password</label>
						<input type="password" name="pass2" id="txtConfirmPassword" class="form-control">
					</div>
					<div class="checkbox1">
						<label>
							<input type="checkbox" name="check" id="agree"> I accept the Terms of Use & Privacy Policy.
							<span class="checkmark"></span>
						</label>
					</div>
<script type="text/javascript">

    function Validate() {
        var passwordlol = document.getElementById("txtPassword").value;
				var password0 = document.getElementById("txtPassword").value.length;
        var confirmPasswordlol = document.getElementById("txtConfirmPassword").value;
				var name = document.getElementById("name0").value.length;
				var email = document.getElementById("email0").value.length;
				var agreement = document.getElementById("agree").checked;
				if(name == 0){
					alert("Name is required!");
					return false;
				}
				if(email == 0){
					alert("Can't Leave Email Empty");
					return false;
				}
				if(password0 == 0){
					alert("Can't Leave Password Empty");
					return false;
				}
				if(agreement == false){
					alert("Agree Checkbox");
					return false;
				}


        if (passwordlol != confirmPasswordlol) {
            alert("UNMATCHED PASSWORD!");
            return false;
        }
        return true;
    }
</script>

					<button onclick="return Validate();">Register Now</button>
				</form>
			</div>
		</div>

	</body>
</html>
